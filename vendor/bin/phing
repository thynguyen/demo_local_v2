#!/bin/sh

# ------------------------------------------------------------------------
# The phing build script for Unix based systems
# $Id: aa4a4cd50300a9f9ad4ec6d2c5c100ba5005297a $
# ------------------------------------------------------------------------

# -------------------------------------------------------------------------
# Do not change anything below this line unless you know what you're doing.
# -------------------------------------------------------------------------

if (test -z "$PHP_COMMAND") ; then
	#echo "WARNING: PHP_COMMAND environment not set. (Assuming php on PATH)"
	PHP_COMMAND="/usr/bin/php"
	export PHP_COMMAND
fi

$PHP_COMMAND -d phar.readonly=off -d html_errors=off -qC /var/www/demo_local_v2/vendor/php/phing.php -logger phing.listener.AnsiColorLogger "$@"
